  "version": "0.2.0",
  "configurations": [
    // Current Device
    {
      "name": "Current Device",
      "request": "launch",
      "program": "lib/main.dart",
      "type": "dart"
      //"args": ["--web-renderer", "html", "--web-hostname", "127.0.0.1"]
    },
    {
      "name": "Current Device (Release mode)",
      "request": "launch",
      "program": "lib/main.dart",
      "type": "dart",
      "flutterMode": "release"
    },
    {
      "name": "Chrome",
      "request": "launch",
      "program": "lib/main.dart",
      "type": "dart",
      "args": ["-d", "chrome"]
    },
    {
      "name": "Windows",
      "request": "launch",
      "program": "lib/main.dart",
      "type": "dart",
      "args": ["-d", "windows"]
    },
    {
      "name": "Android",
      "request": "launch",
      "program": "lib/main.dart",
      "type": "dart",
      "deviceId": "android",
      "args" : ["-d", "emulator-5554"]
    },
  ],
  "compounds": [
    {
        "name": "All Devices",
        "configurations": ["Android", "iPhone"],
    }
]  
